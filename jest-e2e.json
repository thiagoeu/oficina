{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",

  "testMatch": [
    "<rootDir>/test/steps/**/*.steps.ts",
    "<rootDir>/test/**/*.e2e-spec.ts"
  ],

  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },

  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
